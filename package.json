{
  "name": "{{project-name}}",
  "version": "0.1.0",
  "description": "{{description}}",
  "main": "electron/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build:wasm": "cd crates/frontend && trunk build --release",
    "build:wasm:dev": "cd crates/frontend && trunk build",
    "build:backend": "cd crates/backend && npm run build -- --release",
    "build:backend:dev": "cd crates/backend && npm run build",
    "build": "npm run build:wasm && npm run build:backend",
    "watch:wasm": "cd crates/frontend && trunk watch",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac"
  },
  "keywords": [
    "rust",
    "electron",
    "sycamore",
    "wasm",
    "neon"
  ],
  "author": "{{author}}",
  "license": "{{license}}",
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "daisyui": "^5.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "tailwindcss": "^4.0.0"
  },
  "build": {
    "appId": "com.example.{{project-name}}",
    "productName": "{{project-name}}",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "crates/backend/index.node",
      "crates/backend/package.json",
      "package.json"
    ],
    "extraResources": [],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "maintainer": "{{author}}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "chart.js": "^4.5.1"
  }
}
